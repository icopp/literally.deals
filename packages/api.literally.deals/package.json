{
  "name": "api.literally.deals",
  "version": "2.0.0",
  "description": "\"Those sure are some deals that exist.\"",
  "main": "dist/index.js",
  "author": "Ian Copp <copp.ian@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^8 || ^10",
    "yarn": "^1.9.4"
  },
  "scripts": {
    "prepublishOnly": "run-s build",
    "deploy": "now --public deploy",
    "clean": "rimraf dist",
    "prebuild": "run-s clean",
    "build": "cross-env NODE_ENV=production parcel build -t node src/index.ts",
    "prewatch": "run-s clean",
    "watch": "run-p -l watch:parcel watch:tsc watch:nodemon",
    "watch:parcel": "cross-env NODE_ENV=development parcel watch -t node src/index.ts",
    "watch:tsc": "tsc --noEmit",
    "watch:nodemon": "run-s watch:nodemon:wait watch:nodemon:run",
    "watch:nodemon:wait": "wait-on dist/index.js",
    "watch:nodemon:run": "cross-env NODE_ENV=development nodemon -r dotenv/config dist/index.js",
    "start": "cross-env NODE_ENV=production node dist/index.js"
  },
  "now": {
    "alias": "api.literally.deals",
    "env": {
      "EBAY_APP_ID": "@literally-deals-ebay-app-id",
      "EBAY_API_SERVER": "@literally-deals-ebay-api-server"
    }
  },
  "dependencies": {
    "apicache": "^1.2.3",
    "cors": "^2.8.4",
    "delay": "^3.1.0",
    "express": "^4.16.3",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.10",
    "ora": "^3.0.0",
    "query-string": "^6.1.0",
    "ramda": "^0.25.0",
    "rword": "^2.2.0"
  },
  "devDependencies": {
    "@types/apicache": "^1.2.0",
    "@types/cors": "^2.8.4",
    "@types/delay": "^2.0.1",
    "@types/express": "^4.16.0",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.9.1",
    "@types/ora": "^1.3.4",
    "@types/query-string": "^6.1.0",
    "@types/ramda": "^0.25.37",
    "@types/redis": "^2.8.6",
    "@types/rword": "^2.2.0",
    "babel-plugin-lodash": "^3.3.4",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.7",
    "rimraf": "^2.6.2",
    "typescript": "^3.0.3",
    "wait-on": "^3.0.1"
  }
}
