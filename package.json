{
  "name": "literally.deals",
  "version": "3.0.0",
  "description": "\"These sure are some deals that exist.\"",
  "author": "Ian Copp <copp.ian@gmail.com>",
  "license": "MIT",
  "repository": "github:icopp/literally.deals",
  "homepage": "https://literally.deals",
  "bugs": "https://github.com/icopp/literally.deals/issues",
  "private": true,
  "engines": {
    "node": ">=10",
    "yarn": "^1"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --format=pretty --ext .js,.jsx,.ts,.tsx \"src/**/*.{js,jsx,ts,tsx}\"",
    "type-check": "tsc -b .",
    "commit": "git-cz",
    "semantic-release": "semantic-release --repository-url ${BITBUCKET_GIT_HTTP_ORIGIN}"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        0
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "yarn.lock"
          ]
        }
      ]
    ]
  },
  "dependencies": {
    "@hendt/ebay-api": "^0.9.0",
    "@use-it/interval": "^0.1.0",
    "bootswatch": "^4.4.0",
    "delay": "^4.3.0",
    "dotenv": "8.2.0",
    "format-duration": "^1.3.0",
    "he": "^1.2.0",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^11.1.0",
    "next-absolute-url": "^1.2.0",
    "next-fonts": "^1.0.0",
    "ora": "^4.0.0",
    "postinstall": "^0.7.0",
    "query-string": "^6.11.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-spinners": "^0.8.0",
    "rword": "^3.1.0",
    "swr": "^0.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.0",
    "@commitlint/config-conventional": "^8.3.0",
    "@semantic-release/changelog": "^5.0.0",
    "@semantic-release/commit-analyzer": "^8.0.0",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.0",
    "@types/format-duration": "^1.0.0",
    "@types/he": "^1.1.0",
    "@types/node": "^10.9.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.0.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-formatter-pretty": "^3.0.0",
    "eslint-import-resolver-alias": "^1.1.0",
    "eslint-plugin-eslint-comments": "^3.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.0",
    "eslint-plugin-ramda": "^2.5.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-unicorn": "^17.2.0",
    "husky": "^4.2.0",
    "lint-staged": "^10.0.0",
    "prettier": "^1.19.0",
    "semantic-release": "^17.0.0",
    "typescript": "^3.8.0"
  }
}
